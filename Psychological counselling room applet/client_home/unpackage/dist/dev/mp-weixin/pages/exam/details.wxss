
.page_exam {
  padding: 10px;
}
.clear {
  left: 0;
  right: 0;
  padding: 0;
  margin: 0;
  clear: both;
}
.answer_input {
  width: 80%;
  border: 1px solid #666666;
  border-radius: 5px;
  line-height: 30px;
  height: 30px;
}
.answer_textarea {
  width: 80%;
  border: 1px solid #666666;
  border-radius: 5px;
  line-height: 30px;
  height: 90px;
}
.title_margin {
  width: auto;
  margin-top: 20px;
  margin-bottom: 5px;
}
.countdown {
  padding-top: 20px;
}
.countdown ._span {
  color: red;
}
.score_show {
  margin-top: 10px;
  color: red;
}
.answer_submit_user_str {
  display: flex;
}
.answer_submit_button {
  margin-top: 30px;
  padding-bottom: 30px;
}
.answer_submit_button button {
  width: 100px;
  line-height: 40px;
  border-radius: 5px;
}
.answer_btn_submit {
  background-color: blue;
  margin-right: 20px;
  color: white;
}
.answer_btn_box button {
  float: left;
}

